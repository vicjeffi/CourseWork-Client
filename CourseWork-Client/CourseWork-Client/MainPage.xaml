<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" Title="Login" x:Class="CourseWork_Client.MainPage">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Sign Up" Clicked="OnSignUpButtonClicked" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout VerticalOptions="StartAndExpand" Padding="30" Spacing="40">
            <Label Text="Username" />
            <Entry Placeholder="Логин" Keyboard="Email" TextColor="White"/>
            <Label Text="Password" />
            <Entry  IsPassword="true" Placeholder="Пороль" TextColor="White" x:Name="Password_Entry"/>
            <Button Text="Войти!" Clicked="OnLoginButtonClicked" TextColor="White"  
                    FontAttributes="Bold" FontSize="Large" HorizontalOptions="FillAndExpand"  
                    BackgroundColor="#088da5"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
