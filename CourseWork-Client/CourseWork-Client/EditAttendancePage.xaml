<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ConsoleAppForStudentsApp.EditAttendancePage"
             Title="">
    <ContentPage.Content>
        <StackLayout Margin="15">
            <Entry x:Name="reason_Entry" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" Placeholder="Введите текстовую причину" VerticalTextAlignment="Start">
                
            </Entry>

            <StackLayout>
                <StackLayout Orientation="Vertical" VerticalOptions="End">
                    <Button Text="Отметить причину прогула" TextColor="#FFF"  
                     FontSize="Large" HorizontalOptions="FillAndExpand"  
                     BackgroundColor="#3F8F58" x:Name="editAttendance_button" IsEnabled="False"/>
                </StackLayout>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>